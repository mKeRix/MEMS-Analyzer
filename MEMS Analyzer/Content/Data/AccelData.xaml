<UserControl x:Class="MEMS_Analyzer.Content.Data.AccelData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d"
             d:DataContext="{d:DesignData /SampleData/SampleSensorData.xaml}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">  
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="BESCHLEUNIGUNG" Style="{StaticResource Heading2}" />
                <TextBlock>
                    <Run Text="x-Achse:" FontStyle="Italic" />
                    <Run Text="{Binding lastItem.accelX}"  />
                </TextBlock>
                <TextBlock>
                    <Run Text="y-Achse:" FontStyle="Italic" />
                    <Run Text="{Binding lastItem.accelY}"  />
                </TextBlock>
                <TextBlock>
                    <Run Text="z-Achse:" FontStyle="Italic" />
                    <Run Text="{Binding lastItem.accelZ}"  />
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
