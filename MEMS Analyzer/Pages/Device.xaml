<UserControl x:Class="MEMS_Analyzer.Pages.Device"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignData /SampleData/SampleSensorData.xaml}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="GERÄT" Style="{StaticResource Heading2}" />
                <TextBlock Text="Verbindungsmöglichkeiten werden hier angezeigt." />
                <ComboBox Name="ComboBoxPorts" ItemsSource="{Binding sensorConn.availablePorts}" SelectedIndex="0" Width="120" HorizontalAlignment="Left"/>
                <Button Name="ButtonConnect" Content="Verbinden" Width="100" Click="ButtonConnect_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
