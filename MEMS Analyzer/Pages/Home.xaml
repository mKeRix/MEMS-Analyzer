<UserControl x:Class="MEMS_Analyzer.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="MEMS Analyzer" Style="{StaticResource Heading2}" />
                <TextBlock Text="Wilkommen zur MEMS Analyse Software für den 11D Sensor!" TextWrapping="Wrap" />
                <mui:BBCodeBlock BBCode="Bevor es losgehen kann, [url=/Pages/Device.xaml]verbinde[/url] entweder den Sensor oder [url=/Pages/Data/General.xaml]öffne[/url] Daten, um sie auszuwerten." />
                <TextBlock Text="Bei Fragen können Sie in die bereitgestellte Dokumentation schauen oder Ihren Lehrer konsultieren." TextWrapping="Wrap" Margin="0,10,0,0" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
